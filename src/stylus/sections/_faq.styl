#faq
  justify-content center
  flex-direction column
  align-items center
  gap 20px

  .faq
    display flex
    flex-direction column
    padding 20px
    width 100%
    max-width 700px
    box-sizing border-box
    background rgba(#fff, 0.4)
    border-radius 10px
    cursor pointer
    backdrop-filter blur(10px)

  .question
    font-size 18px
    font-weight 700

  .answer
    max-height 0
    overflow hidden
    transition max-height 0.2s ease-out

  .show
    max-height 100px