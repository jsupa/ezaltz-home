.widget
  display flex
  align-items center
  gap 50px
  background rgba(gray-color, 0.2)
  backdrop-filter blur(10px)
  border-radius widget-radius
  padding 14px 35px

  h3
    font-size 24px
    font-weight 700
    letter-spacing 0.5px
    color green-color

  p
    font-size 17px
    font-weight 400
    letter-spacing 0.4px
    color gray-color

    &.info
      color text-color

  .texts
    display flex
    flex-direction column

  .emoji
    font-size 35px
